<section>
    <h2>Edit article
        <div class="controls">
            <a href="#">Lock article</a>
            <a href="#">Unlock article</a>
        </div>
    </h2>
    <div class="spacer">
        <form action="/edit/{{articleId}}" method="post">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">{{edit.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>