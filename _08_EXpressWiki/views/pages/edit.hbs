<section>
    <h2>Edit article
        <div class="controls">
            {{#if isAdmin}}
                <a href="/lockArticle/{{articleId}}">Lock article</a>
                <a href="/unlockArticle/{{articleId}}">Unlock article</a>
            {{/if}}
        </div>
    </h2>
    <div class="spacer">
        <form action="/edit/{{articleId}}" method="post">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">{{edit.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>